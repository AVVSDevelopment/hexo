@import "_base/base"

@import "_partial/footer"

#content
  position absolute
  top 0
  left 0
  right 0
  bottom 0

#content-inner
  width 100%
  height 100%
  position relative

#login-form
  position absolute
  top 25%
  left 50%
  width 400px
  margin-left -200px

#login-title
  font-size 30px
  line-height 30px
  font-weight 300
  text-transform uppercase
  color #999
  text-shadow 1px 1px #fff

#login-button
  float right
  &:before
    content "\f084"

#login-message
  float right
  color red
  line-height 36px
  padding 0 15px 0 0
  font-size 0.9em
  color #ff0000

#footer
  position absolute
  bottom 0
  left 0