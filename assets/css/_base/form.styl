.form
  input
  textarea
    font inherit
    padding 5px 10px
    margin 5px 0
    border 1px solid #ddd
    border-radius 3px
    width 100%
    color color-font
    &:focus
      border-color #999
    &.error
      border-color #ff0000
  textarea
    line-height 1.6em
  .group
    padding 0 0 10px
  .required-label
    color #ff0000
    padding 0 0 0 5px