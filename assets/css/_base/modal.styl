.modal
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  display none
  .back
    background #000
    opacity 0.7
    width 100%
    height 100%
    position absolute
    top 0
    left 0
  .window
    width 560px
    margin-left -280px
    position absolute
    top 20%
    left 50%
    background #fff
    box-shadow 0 0 15px rgba(0, 0, 0, 0.2)
    overflow hidden
  header
    padding 10px 15px
    margin 0 0 15px
    background #eee
    border-bottom 1px solid #ddd
    text-align center
    color #666
    text-shadow 1px 1px 1px #fff
  .title
    font-weight 300
    font-size 20px
    line-height 20px
  .content
    clearfix()
    max-height 400px
    overflow-y auto
    padding 0 15px
  footer
    clearfix()
    margin 15px 0 0
  .button
    font-size 0.9em
    float left
    width 50%
    padding-left 0
    padding-right 0
    border-radius 0