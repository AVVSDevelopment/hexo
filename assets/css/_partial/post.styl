.post
  padding 50px 0 0

.post-meta
  font-size 0.9em
  color color-meta

.post-title
  color color-font
  font-size 2em
  text-decoration none
  font-weight 300
  &:hover
    color color-link

#post-edit
  padding 50px 0 0

#post-textarea
  background transparent
  border none
  resize none
  color color-main
  width 100%
  font 14px/1.6em font-mono
  overflow hidden
  color #333

#edit-cancel-button
  &:before
    content "\f00d"

#edit-delete-button
  &:before
    content "\f014"

#edit-save-button
  &:before
    content "\f0c7"