<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hexo Web UI</title>
    <link rel="stylesheet" href="/admin/css/login.css" media="screen" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
    <!--[if lt IE 9]><script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  </head>
  <body>
    <div id="content">
      <div id="content-inner">
        <form method="post" id="login-form" class="form">
          <h1 id="login-title">Login</h1>
          <input type="password" name="pass" id="login-input" class="required">
          <button type="submit" id="login-button" class="button green">Login</button>
          <% if (error == 1){ %>
            <div id="login-message">Wrong password</div>
          <% } %>
        </form>
        <%- partial('_partial/footer') %>
      </div>
    </div>

    <script src="/admin/js/login.js"></script>
  </body>
</html>